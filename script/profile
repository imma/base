#!/usr/bin/env bash

function _base_profile {
  local shome="${_base_home:="$(cd -P -- "$(dirname -- "$BASH_SOURCE")/.." && pwd -P)"}"

  : ${DISTRIB_ID:=}

  if [[ -f /etc/lsb-release ]]; then
    . /etc/lsb-release
  fi

  if [[ -z "${DISTRIB_ID}" ]]; then
    if [[ -f /etc/lsb-release ]]; then
      DISTRIB_ID="$(awk '{print $1}' /etc/system-release)"
    fi

    if [[ -z "${DISTRIB_ID}" ]]; then
      DISTRIB_ID="$(uname -s)"
    fi
  fi

  export DISTRIB_ID
}

_base_profile

